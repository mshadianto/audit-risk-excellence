# AURIX v4.0 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AURIX
APP_ENV=development
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# DATABASE CONFIGURATION (Optional - for visitor analytics)
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/aurix

# Or individual settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aurix
DB_USER=username
DB_PASSWORD=password

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# Get free API keys from the following providers:

# Groq - https://console.groq.com
GROQ_API_KEY=

# Together AI - https://together.ai
TOGETHER_API_KEY=

# Google AI Studio - https://aistudio.google.com
GOOGLE_API_KEY=

# OpenRouter - https://openrouter.ai
OPENROUTER_API_KEY=

# OpenAI (Optional - paid)
OPENAI_API_KEY=

# Ollama (Local) - No key needed
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
# Vector store settings
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VISITOR_TRACKING=true
ENABLE_RAG_SEARCH=true
ENABLE_CONTINUOUS_AUDIT=true
ENABLE_FRAUD_DETECTION=true

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
